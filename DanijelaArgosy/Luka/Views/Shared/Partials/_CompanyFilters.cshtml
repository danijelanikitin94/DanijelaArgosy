   .panel .btn
   {
text-align: left;

   }


  .btn-danger .badge {
    color: #000;
  
}

   .btn-primary .badge {
    color: #000;
  
}

.btn-danger:active:hover
 {
    color: #333;
    border-color: #ccc;
    background-color: #ccc;
}
